server {
    listen 80;
    server_name ${PRIMARY_DOMAIN_NAME} ${API_DOMAIN_NAME};

    # Define the root directory for the ACME challenge
    # This is used by Certbot to verify domain ownership for SSL certificates
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    # Redirect all other HTTP requests to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}